#!/usr/bin/env bash
# This script displays all IPv4 IPs on a machine

# Get the IP addresses using 'ip' command (works on most modern systems)
ips=$(ip -4 addr show | grep -oP '(?<=inet\s)\d+(\.\d+){3}')

# If 'ip' command didn't work, try using 'ifconfig'
if [ -z "$ips" ]; then
    ips=$(ifconfig | grep -oP '(?<=inet\s)\d+(\.\d+){3}')
fi

echo "IPv4 addresses on this machine:"
echo "$ips"
