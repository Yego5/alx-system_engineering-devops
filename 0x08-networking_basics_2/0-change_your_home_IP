#!/usr/bin/env bash

# Backing up the original hosts file
sudo cp /etc/hosts /etc/hosts.bak

# Modifying the hosts file
sudo sed -i 's/localhost$/localhost\n127.0.0.2/' /etc/hosts
sudo sed -i 's/facebook.com$/facebook.com\n8.8.8.8/' /etc/hosts

echo "Hosts file has been updated. Now, localhost resolves to 127.0.0.2, and facebook.com resolves to 8.8.8.8."

# Reloading the networking service (not always necessary, but recommended to ensure changes take effect)
sudo systemctl restart networking"
